<div class="container">
  <div class="row">
    <% @lectures.each do |lecture| %>
      <div class="col-3">
        <div class="white-card">
          <h4><%= lecture.name %></h4>
          <div class="icons">
            <% if policy(lecture).edit? %>
              <%= link_to edit_lecture_path(lecture) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            <% end %>
            <% if policy(lecture).show? %>
              <%= link_to lecture_path(lecture) do %>
                <i class="fas fa-eye"></i>
              <% end %>
            <% end %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
